<%- include('partials/header') %>
<%- include('partials/page-hero') %>

<section class="container content-section text-center">
    <h2>Your Contribution Makes a Difference</h2>
    <p class="lead">Every donation, no matter the size, directly supports our conservation projects, empowers local communities, and helps protect the invaluable wildlife of the Khaudum North Complex.</p>

    <div class="donation-widget card" style="max-width: 500px; margin: 2rem auto; padding: 2rem;">
        <h3>Make a Secure Donation</h3>
        <form action="/donation" method="POST">
             <div class="form-group">
                <label for="amount">Amount ($)</label>
                <input type="number" id="amount" name="amount" class="form-control" required min="1">
            </div>
             <div class="form-group">
                <label for="donorName">Your Name (Optional)</label>
                <input type="text" id="donorName" name="donorName" class="form-control" placeholder="Anonymous">
            </div>
             <div class="form-group">
                <label for="donorEmail">Your Email (Optional)</label>
                <input type="email" id="donorEmail" name="donorEmail" class="form-control">
            </div>
            
            <p style="font-size: 0.9rem; color: #888;">
                This is a simulated donation form for demonstration purposes. No real payment will be processed.
            </p>
            <button type="submit" class="btn btn-primary btn-block">Donate Now</button>
        </form>
    </div>
</section>

<%- include('partials/footer') %>