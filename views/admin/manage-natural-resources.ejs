<%- include('../partials/header') %>

<div class="admin-container container">
    <div class="admin-header">
        <h1 class="page-title">Manage Natural Resources</h1>
        <a href="/admin/natural-resources/add" class="btn btn-primary">Add New Resource</a>
    </div>

    <table class="admin-table">
        <thead>
            <tr>
                <th>Resource Name</th>
                <th>Date Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if(resources && resources.length > 0) { %>
                <% resources.forEach(item => { %>
                    <tr>
                        <td><%= item.name %></td>
                        <td><%= new Date(item.createdAt).toLocaleDateString() %></td>
                        <td>
                            <a href="/admin/natural-resources/edit/<%= item.id %>" class="btn-action edit">Edit</a>
                            <a href="/admin/natural-resources/delete/<%= item.id %>" class="btn-action delete" onclick="return confirm('Are you sure you want to delete this resource?');">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="3">No natural resources found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>