<%- include('../partials/header') %>

<div class="admin-container container">
    <div class="admin-header">
        <h1 class="page-title">Manage Team Members</h1>
        <a href="/admin/team/add" class="btn btn-primary">Add New Member</a>
    </div>

    <div class="admin-table-wrapper">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Photo</th>
                    <th>Name</th>
                    <th>Title</th>
                    <th>Order</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if(teamMembers && teamMembers.length > 0) { %>
                    <% teamMembers.forEach(member => { %>
                        <tr>
                            <td><img src="<%= member.photo %>" alt="<%= member.name %>" width="50" style="border-radius: 50%; aspect-ratio: 1/1; object-fit: cover;"></td>
                            <td><%= member.name %></td>
                            <td><%= member.title %></td>
                            <td><%= member.displayOrder %></td>
                            <td>
                                <a href="/admin/team/edit/<%= member.id %>" class="btn-action edit">Edit</a>
                                <a href="/admin/team/delete/<%= member.id %>" class="btn-action delete" onclick="return confirm('Are you sure you want to delete this team member? This cannot be undone.');">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="5">No team members found. Click "Add New Member" to add one.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('../partials/footer') %>