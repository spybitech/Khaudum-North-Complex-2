<%- include('../partials/header') %>

<div class="admin-container container">
    <div class="admin-header">
        <h1 class="page-title">Edit Resource</h1>
        <a href="/admin/resources" class="btn btn-secondary">Back to Resources</a>
    </div>

    <form 
        action="/admin/resources/edit/<%= doc.id %>" 
        method="POST" 
        class="admin-form">

        <div class="form-group">
            <label for="title">Document Title</label>
            <input type="text" id="title" name="title" value="<%= doc.title || '' %>" required>
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" rows="3" required><%= doc.description || '' %></textarea>
        </div>
        
        <div class="form-group">
            <label for="category">Category</label>
            <select id="category" name="category">
                <option value="Report" <%= (doc.category === 'Report') ? 'selected' : '' %>>Report</option>
                <option value="Brochure" <%= (doc.category === 'Brochure') ? 'selected' : '' %>>Brochure</option>
                <option value="Policy" <%= (doc.category === 'Policy') ? 'selected' : '' %>>Policy</option>
                <option value="Other" <%= (doc.category === 'Other') ? 'selected' : '' %>>Other</option>
            </select>
        </div>

        <div class="form-group">
            <label>Current File</label>
            <p><a href="<%= doc.filePath %>" target="_blank">View Current File</a></p>
            <p><small>Note: To replace the file, please delete this resource and upload a new one.</small></p>
        </div>

        <button type="submit" class="btn btn-primary">Update Resource</button>
    </form>
</div>

<%- include('../partials/footer') %>