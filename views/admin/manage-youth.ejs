<%- include('../partials/header') %>

<div class="admin-container container">
    <div class="admin-header">
        <h1 class="page-title">Manage Youth Initiatives</h1>
        <a href="/admin/youth/add" class="btn btn-primary">Add New Initiative</a>
    </div>

    <table class="admin-table">
        <thead>
            <tr>
                <th>Initiative Title</th>
                <th>Status</th>
                <th>Date Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if(initiatives && initiatives.length > 0) { %>
                <% initiatives.forEach(item => { %>
                    <tr>
                        <td><%= item.title %></td>
                        <td><%= item.status %></td>
                        <td><%= new Date(item.createdAt).toLocaleDateString() %></td>
                        <td>
                            <a href="/admin/youth/edit/<%= item.id %>" class="btn-action edit">Edit</a>
                            <a href="/admin/youth/delete/<%= item.id %>" class="btn-action delete" onclick="return confirm('Are you sure you want to delete this initiative?');">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="4">No youth initiatives found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>