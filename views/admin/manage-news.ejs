<%- include('../partials/header') %>

<div class="admin-container container">
    <div class="admin-header">
        <h1 class="page-title">Manage News & Updates</h1>
        <a href="/admin/news/add" class="btn btn-primary">Add New Article</a>
    </div>

    <table class="admin-table">
        <thead>
            <tr>
                <th>Article Title</th>
                <th>Category</th>
                <th>Date Published</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if(articles && articles.length > 0) { %>
                <% articles.forEach(article => { %>
                    <tr>
                        <td><%= article.title %></td>
                        <td><%= article.category %></td>
                        <td><%= new Date(article.createdAt).toLocaleDateString() %></td>
                        <td>
                            <a href="/admin/news/edit/<%= article.id %>" class="btn-action edit">Edit</a>
                            <a href="/admin/news/delete/<%= article.id %>" class="btn-action delete" onclick="return confirm('Are you sure you want to delete this article?');">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="4">No articles found. Click "Add New Article" to create one.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>